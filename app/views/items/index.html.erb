<h1>Items</h1>

<% if @items.empty?%>
<b> No items in store</b>
<%else%>

<table>
	<tr>
		<th>item id</th>
		<th>name</th>
		<th>price</th>
		<th></th>
		<th></th>
	</tr>
<% @items.each do |i| %>


<tr>
	<td> <%=i.id%> </td>
	<td> <%=link_to i.name, item_path(i)%> </td>
	<td> <%=i.price%> </td>
	<td><%=link_to "Удалить", i, method: :delete %></td>
	<th>Рейтинг: <%=i.votes_count %>, <%= link_to "+", upvote_item_path(i)%> </th>


 <%end%>
 <%end%>